<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="386dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Esta aplicación fue diseñada y desarrollada por Geronimo Guayara Rodríguez, estudiante activo del ITLA. \n\nLa aplicación supone mostrar sus canciones favoritas, videos, entre otras cosas. \n\nEsperamos que puedas disfrutar y tener una excelente experiencia usando la aplicación." />

</RelativeLayout>
